<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iF6/8MKOACuZfuw4xSZyL5RtoHTzFJnU0oMqqmi4bR6tnG3PGmkzs" crossorigin="anonymous">
</head>
<style>
  .mt-3{
    background-color: rgba(120, 117, 115, 0.133);
  }
</style>
<body>
<%- include('./partials/nav') %>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h1><%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" class="BlogImg img-fluid" />
            <pre class="mt-3"><%= blog.body %></pre>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <img src="<%= blog.createdBy.profileImageURL %>" width="50px" /> <%= blog.createdBy.fullName %>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter your comment" />
                    <button class="btn btn-sm btn-primary" type="submit">Add</button>
                </div>
            </form>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageURL %>" width="50px" />
                    <%= comment.createdBy.fullName %>
                    <pre><%= comment.content %></pre>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/scripts') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+UO7plT73Ofi+wn2R8Gfizr0xrDfjkF0F5f2Kx3" crossorigin="anonymous"></script>
</body>
</html>
